{% extends 'base.html.twig' %}

{% block title %}NosVoyageurs{% endblock %}

{% block body %}

    <!-- product section -->
    <div class="product-section mt-100 mb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="section-title">
                        <h3><span class="orange-text">Nos</span> Publications</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end product section -->

        <!-- latest news -->
    <div class="latest-news mt-150 mb-150">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                {% for message in app.flashes("_message") %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                </div>
            </div>
            <div class="row">
                {% for publication in publications %}
                <div class="col-lg-4 col-md-6">
                    <div class="single-latest-news">
                        <div class="latest-news-bg">
                            <a href="{{ url("show_publication", {"slug": publication.titre | slug("-") | lower, "id": publication.id}) }}"><img src="{{ asset('assets/img/publications/' ~ publication.image) }}" alt="{{publication.titre}}"></a>
                        </div>
                        <div class="news-text-box">
                            <h3><a href="{{ url("show_publication", {"slug": publication.titre | slug("-") | lower, "id": publication.id}) }}">{{publication.titre}}</a></h3>
                            <p class="blog-meta">
                                <span class="author"><i class="fas fa-user"></i> {{publication.user.name}}</span>
                                <span class="author"><i class="fas fa-heart"></i> {{publication.likes}}</span>
                                <span class="author"><i class="fas fa-thumbs-down"></i> {{publication.dislikes}}</span><br>
                                <span class="date"><i class="fas fa-calendar"></i> {{publication.createdAt  | ago(locale="fr") }}</span>
                            </p>
                            
                            <a href="{{ url("show_publication", {"slug": publication.titre | slug("-") | lower, "id": publication.id}) }}" class="read-more-btn">read more <i class="fas fa-angle-right"></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
                
            </div>

            
        </div>
    </div>
    <!-- end latest news -->



{% endblock %}
